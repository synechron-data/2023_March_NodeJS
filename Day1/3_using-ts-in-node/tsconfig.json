{
    "compilerOptions": {
        "module": "CommonJS",
        "moduleResolution": "node",
        "target": "ES5",
        "outDir": "dist",
        "removeComments": true,
        "noEmitOnError": true,
        "noImplicitAny": true,
        "strict": true,
        "lib": [
            "ES2018"
        ],
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*",
        "dist"
    ]
}